@page "/"

<PageTitle>Tablazor - Blazor Component Library</PageTitle>

<SetTabPageHeader Title="Tablazor" Subtitle="Tablazor Components Demo Site"></SetTabPageHeader>

<div class="row row-deck row-cards">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Getting Started</h3>
            </div>
            <div class="card-body">
                <p>
                    Tablazor provides a set of reusable Blazor components styled with the Tabler design system.
                    Explore the components below to see what's available.
                </p>
                <CodeBlock Language="bash" Code="dotnet add package Tablazor" />
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="card">
            <div class="card-header">
